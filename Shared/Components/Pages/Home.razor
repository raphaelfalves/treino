@code {
    [SupplyParameterFromForm]
    User user { get; set; } = new();
    UserCreateRequest register = new(string.Empty, string.Empty);

    int step = 0;

    async Task SaveUser()
    {
        step = 3;
    }   

    async Task Register()
    {
        await userService.Create(user);
        step = -1;
    }    

    void finish()
    {
        step = -1;
    }

    void NextStep()
    {
        step++;
    }

    void PreviusStep()
    {
        step--;
    }
}
